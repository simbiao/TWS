<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- Base activity theme. -->
    <style name="ActTheme" parent="AppTheme">
        <item name="android:screenOrientation">portrait</item>
    </style>
    <!-- Splash activity theme. -->
    <style name="SplashTheme" parent="ActTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- Rename activity theme. -->
    <style name="RenameTheme" parent="ActTheme">
        <item name="android:windowBackground">@color/colorTrans2F</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>
    <!-- More item text style. -->
    <style name="MoreItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_28dp</item>
        <item name="android:layout_marginStart">@dimen/_6dp</item>
        <item name="android:layout_marginEnd">@dimen/_4dp</item>
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_8dp</item>
        <item name="android:paddingEnd">@dimen/_8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>
</resources>
